     <charm id="Abyssal.FlittingShadowForm" exalt="Abyssal" group="Dodge">
          <prerequisite>
               <trait id="Dodge" value="3" />
               <essence value="1" />
          </prerequisite>
          <cost>
               <essence cost="1" />
          </cost>
          <duration duration="Instant" />
