          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Virtue-Conviction" visualize="true" />
          <source source="Sidereals2nd" />
     </charm>
     <charm id="Sidereal.OfSecretsYetUntold" exalt="Sidereal" group="Lore">
