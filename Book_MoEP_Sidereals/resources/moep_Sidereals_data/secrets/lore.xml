     <charm id="Sidereal.MethodologyOfSecrets" exalt="Sidereal" group="Lore">
          <prerequisite>
               <trait id="Lore" value="2" />
               <essence value="2" />
          </prerequisite>
          <cost>
               <essence cost="5" />
          </cost>
          <duration event="NextSleep" />
          <charmtype type="Reflexive" />
          <source source="Sidereals2nd" />
     </charm>
     <charm id="Sidereal.OfTruthsBestUnspoken" exalt="Sidereal" group="Lore">
          <prerequisite>
               <trait id="Lore" value="4" />
               <essence value="3" />
               <charmReference id="Sidereal.MethodologyOfSecrets" />
          </prerequisite>
          <cost>
               <essence cost="10" />
