<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Obsidian Shards of Infinity Style -->
     <charm id="Sidereal.BlackShardsFallLikeIce" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="5" />
               <essence value="4" />
          </prerequisite>
          <cost>
               <essence cost="10" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Combo-Basic" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="ScrollMonk" />
     </charm>
     <charm id="Sidereal.RippleInTheSilveredGlass" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="5" />
               <essence value="4" />
          </prerequisite>
          <cost>
               <essence cost="6" />
               <willpower cost="1" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Reflexive">
               <special primaryStep="5" />
          </charmtype>
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <source source="ScrollMonk" />
     </charm>
     <charm id="Sidereal.ReachingThroughTheMirror" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="5" />
               <essence value="4" />
          </prerequisite>
          <cost>
               <essence cost="8" text="per target" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Combo-Basic" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="ScrollMonk" />
     </charm>
     <charm id="Sidereal.ShatteringTheBalance" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="5" />
               <essence value="4" />
               <charmReference id="Sidereal.BlackShardsFallLikeIce" />
               <charmReference id="Sidereal.RippleInTheSilveredGlass" />
               <charmReference id="Sidereal.ReachingThroughTheMirror" />
          </prerequisite>
          <cost>
               <essence cost="8" />
               <willpower cost="1" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Supplemental" />
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Compulsion" visualize="true" />
          <charmAttribute attribute="Sickness" visualize="true" />
          <source source="ScrollMonk" />
     </charm>
     <charm id="Sidereal.ObsidianShardsOfInfinityForm" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <!-- Prerequisite of "One complete Celestial Style" doesn't seem to be modeled in XML. -->
               <trait id="MartialArts" value="5" />
               <essence value="5" />
               <charmReference id="Sidereal.ShatteringTheBalance" />
          </prerequisite>
          <cost>
               <essence cost="10" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Form" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="ScrollMonk" />
     </charm>
     <charm id="Sidereal.TheMirrorDoesNotLie" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="5" />
               <essence value="5" />
               <charmReference id="Sidereal.ObsidianShardsOfInfinityForm" />
          </prerequisite>
          <cost>
               <essence cost="10" />
               <willpower cost="1" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Reflexive">
               <special primaryStep="3" />
          </charmtype>
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Combo-Basic" visualize="true" />
          <source source="ScrollMonk" />
     </charm>
     <charm id="Sidereal.VanishedWithinTheGlass" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="5" />
               <essence value="6" />
               <charmReference id="Sidereal.TheMirrorDoesNotLie" />
          </prerequisite>
          <cost>
               <essence cost="15" />
               <willpower cost="1" />
          </cost>
          <duration duration="Indefinite" />
          <charmtype type="Supplemental" />
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Touch" visualize="true" />
          <source source="ScrollMonk" />
     </charm>
     <charm id="Sidereal.DrawForthOneShard" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="5" />
