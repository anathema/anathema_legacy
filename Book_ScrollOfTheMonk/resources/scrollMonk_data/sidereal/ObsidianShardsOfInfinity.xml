     </charm>
     <charm id="Sidereal.BreathingOnTheBlackMirror" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="7" />
               <essence value="7" />
               <charmReference id="Sidereal.EchoesOfInfinity" />
          </prerequisite>
          <cost>
