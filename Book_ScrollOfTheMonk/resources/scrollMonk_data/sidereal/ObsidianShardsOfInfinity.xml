          </prerequisite>
          <cost>
               <essence cost="15" />
               <willpower cost="1" text="+ later expenditure" />
          </cost>
          <duration duration="Instant" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Combo-Basic" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <charmAttribute attribute="Touch" visualize="true" />
          <source source="ScrollMonk" />
     </charm>
     <charm id="Sidereal.DrawForthEveryShard" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="6" />
               <essence value="6" />
               <charmReference id="Sidereal.DrawForthOneShard" />
          </prerequisite>
          <cost>
               <essence cost="2" text="per duplicate" />
               <willpower cost="1" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Simple" />
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Combo-Basic" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <charmAttribute attribute="Stackable" visualize="true" />
          <source source="ScrollMonk" />
     </charm>
     <charm id="Sidereal.EchoesOfInfinity" exalt="Solar" group="ObsidianShardsOfInfinityStyle">
          <prerequisite>
               <trait id="MartialArts" value="6" />
               <essence value="7" />
               <charmReference id="Sidereal.VanishedWithinTheGlass" />
               <charmReference id="Sidereal.DrawForthEveryShard" />
          </prerequisite>
          <cost>
               <essence cost="10" />
               <willpower cost="1" />
          </cost>
          <duration amount="1" unit="scene" />
          <charmtype type="Reflexive" />
          <charmAttribute attribute="Sidereal" />
          <charmAttribute attribute="Combo-OK" visualize="true" />
