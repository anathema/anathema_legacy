     <!-- Stealth -->
     <charm id="Solar.HoodingTheSolarLantern" exalt="Solar" group="Stealth">
          <prerequisite>
               <trait id="Stealth" value="5" />
               <essence value="4" />
               <charmReference id="Solar.EasilyOverlookedPresenceMethod" />
               <charmAttributeRequirement attribute="ExcellencyStealth" />
          </prerequisite>
          <cost />
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="Stackable" visualize="true" />
          <source source="LordsOfCreation" />
			<source source="ScrollErrata" />
     </charm>
     <charm id="Solar.EverywhereAndNowhereStance" exalt="Solar" group="Stealth">
          <prerequisite>
               <trait id="Stealth" value="5" />
               <essence value="5" />
               <charmReference id="Solar.MentalInvisibilityTechnique" />
          </prerequisite>
          <cost>
               <essence cost="4" />
          </cost>
          <duration duration="Indefinite" />
          <charmtype type="Simple">
			<special speed="4" defense="-0" />
		</charmtype>
          <charmAttribute attribute="Combo-OK" visualize="true" />
		<charmAttribute attribute="Illusion" visualize="true" />
		<charmAttribute attribute="Touch" visualize="true" />
          <source source="LordsOfCreation" />
			<source source="ScrollErrata" />
     </charm>
	<charm id="Solar.WalkingInLegendsShadow" exalt="Solar" group="Stealth">
		<prerequisite>
			<trait id="Stealth" value="6" />
			<essence value="6" />
			<charmReference id="Solar.VanishingfromMind'sEyeMethod" />
		</prerequisite>
		<cost>
			<essence cost="10" />
			<willpower cost="1"/>
		</cost>
		<duration duration="Indefinite" />
		<charmtype type="Simple" />
		<charmAttribute attribute="Combo-OK" visualize="true" />
		<charmAttribute attribute="Illusion" visualize="true" />
		<source source="ScrollErrata" />
	</charm>
</charmlist>
