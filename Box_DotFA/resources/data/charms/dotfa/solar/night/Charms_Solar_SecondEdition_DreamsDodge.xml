<charmlist xmlns="http://anathema.sourceforge.net/charms">
     <!-- Dodge -->
     <charm id="Solar.RefinementOfFlowingShadows" exalt="Solar" group="Dodge">
          <prerequisite>
               <trait id="Dodge" value="5" />
               <essence value="4" />
               <charmReference id="Solar.SevenShadowEvasion" />
          </prerequisite>
          <cost>
               <essence cost="Varies" text="+3m or +3m, 1wp" />
          </cost>
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="FavoredCaste.Dawn" visualize="true" />
          <charmAttribute attribute="Mirror" visualize="true" />
			<!-- NOTE:  Abyssal Mirror - Thousandfold Shadow Dance -->
          <source source="LordsOfCreation" />
			<source source="ScrollErrata" />
     </charm>
     <charm id="Solar.AegisOfAltruisticInterposition" exalt="Solar" group="Dodge">
          <prerequisite>
               <trait id="Dodge" value="5" />
               <essence value="4" />
               <charmReference id="Solar.LeapingDodgeMethod" />
          </prerequisite>
          <cost>
               <essence cost="4" />
          </cost>
          <duration amount="1" unit="action" />
          <charmtype type="Reflexive">
			<special primaryStep="2" />
		</charmtype>
          <charmAttribute attribute="Combo-OK" visualize="true" />
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="LordsOfCreation" />
		<source source="ScrollErrata" />
     </charm>
     <charm id="Solar.DivineWitnessOfUtterSafety" exalt="Solar" group="Dodge">
          <prerequisite>
               <trait id="Dodge" value="5" />
               <essence value="5" />
               <charmReference id="Solar.LeapingDodgeMethod" />
				<charmReference id="Solar.SevenShadowEvasion" />
          </prerequisite>
          <cost>
               <essence cost="Varies" text="+4m"/>
          </cost>
          <duration duration="Permanent" />
          <charmtype type="Permanent" />
          <charmAttribute attribute="FavoredCaste.Dawn" visualize="true" />
		<charmAttribute attribute="Mirror" visualize="true" />
		<!-- NOTE:  Abyssal Mirror - Shadow Fades at Dawn -->
          <charmAttribute attribute="Obvious" visualize="true" />
          <source source="LordsOfCreation" />
			<source source="ScrollErrata" />
     </charm>
</charmlist>
